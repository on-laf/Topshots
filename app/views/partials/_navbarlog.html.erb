<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
    <div class="d-flex">
      <a class="navbar-brand" href="/">
          <%= image_tag "photologo.png", class: "navbar-logo"%> Top Shots <!--Logo!-->
      </a>

    </div>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <%= form_tag photographers_path, method: :get, class: "form-inline my-2 my-lg-0" do %>
          <%= text_field_tag :query,
            params[:query],
            class: "form-control mr-sm-2 btn-font",
            placeholder: "Search"
          %>
          <%= submit_tag "Find a Photographer", class: "btn btn-outline-dark btn-font my-2 my-sm-0" %>
        <% end %>
      </li>

      <li class="nav-item active">
        <div class="dropdown show">
            <a class=" dropdown-toggle" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true"  />
              <%= cl_image_tag current_user.photo.key, height: 40, width: 40, crop: :thumb, gravity: :face, class: "card-avatar avatar" %>
            </a>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
              <a class="dropdown-item" href="/profile">My Profile</a>
              <%= link_to 'Log Out', destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </div>
      </li>
    </ul>
  </div>
</div>
