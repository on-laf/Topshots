<div class="container my-3" style="max-width: 500px;">
  <%= simple_form_for [ @photographer, @booking ] do |f| %>
    <%= f.input :day, label: 'From', input_html: { value: '@booking.day' }%>
    <%= f.input :duration, label: 'To', input_html: { value: '@booking.duration' } %>
    <%= f.input :total_price, input_html: { value: '@booking.total_price' } %>
    <%= f.submit "Request Booking", class: "btn btn-dark" %>
  <% end %>
</div>
