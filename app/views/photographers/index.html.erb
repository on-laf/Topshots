<div class="container">
  <h1>Photographers</h1>

  <div class= "container">
    <div class="row">
      <% @photographers.each do |photographer| %>
        <div class = "col-12 col-md-6 col-lg-4">
          <div class = "d-flex flex-row justify-content-between">
            <img src="https://picsum.photos/100/100" alt="random image">
              <div class = "p-2">
                <h3><%= photographer.name %></h3>
                  <div class = "d-flex flex-row justify-content-between">
                    <p><%= photographer.location %></p>
                    <strong>â‚¬ <%= photographer.price %></strong>
                  </div>
                <%= link_to "See more", photographer_path(photographer), class: "btn btn-primary"%>
              </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
