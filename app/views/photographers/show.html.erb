<div class="banner_profile" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('https://images.unsplash.com/photo-1536632087471-3cf3f2986328?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1655&q=80')"></div>
 <img src="https://kitt.lewagon.com/placeholder/users/random" class="avatar-xl avatar_profile" />
<div class="container" id="content_profile"> <!-- margin-top-negative -->
  <div class="row">
    <div class="col-8">
      <div>
        <h1><%= @photographer.name %></h1>
        <p><i class="fa fa-map-pin mr-2" aria-hidden="true"></i><%= @photographer.location %></p>
      </div>

      <div>
        <h4>A bit more about this photographer...</h4>
        <p><%= @photographer.description %></p>
      </div>
    </div>

    <div class="col-4">
      <div>
        <h5>Book this photographer!</h5>

        <form action="">
          <div class="input-group">
            <span class="input-group-addon" id="basic-addon1">From:</span>
            <input type="text" class="form-control" placeholder="12/10/2017" aria-label="Username" aria-describedby="basic-addon1">
          </div>
          <div class="input-group mt-2">
            <span class="input-group-addon" id="basic-addon1">To:</span>
            <input type="text" class="form-control" placeholder="18/10/2017" aria-label="Username" aria-describedby="basic-addon1">
          </div>
          <input type="submit" value="Book" class="btn btn-success mt-2" style="width: 100%">
        </form>
      </div>
      <div>
        <h3>Details</h3>
        <div class="flex">

          <div class="flex ml-3">
            <i class="material-icons mr-2">â‚¬</i> <%= @photographer.price %>
          </div>
        </div>
      </div>
      <div>
        <div class="flex-align">
          <h6 class="no-mb">Share</h6>

          <div class="flex">
            <i class="fa fa-facebook-square fa-2x mr-2"></i>
            <i class="fa fa-twitter-square fa-2x mr-2"></i>
            <i class="fa fa-pinterest-square fa-2x mr-2"></i>
            <i class="fa fa-envelope-square fa-2x"></i>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
